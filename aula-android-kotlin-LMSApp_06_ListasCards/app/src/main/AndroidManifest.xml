<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.fabiopereira.lmsapp">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="br.com.fabiopereira.lmsapp.MainActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="br.com.fabiopereira.lmsapp.DebugActivity" />
        <activity
            android:name="br.com.fabiopereira.lmsapp.TelaInicialActivity"
            android:theme="@style/AppTheme.Toolbar" />
        <activity android:name="br.com.fabiopereira.lmsapp.DisciplinaActivity"
            android:theme="@style/AppTheme.Toolbar"
            android:parentActivityName="br.com.fabiopereira.lmsapp.TelaInicialActivity"></activity>
    </application>

</manifest>