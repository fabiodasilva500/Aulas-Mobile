<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/lblTemperatura1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Digite a primeira temperatura" />

    <EditText
        android:id="@+id/txtTemperatura1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblTemperatura2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a segunda temperatura" />

    <EditText
        android:id="@+id/txtTemperatura2"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </EditText>

    <TextView
        android:id="@+id/lblTemperatura3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a terceira temperatura" />

    <EditText
        android:id="@+id/txtTemperatura3"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </EditText>

    <Button
        android:id="@+id/btnVerificar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Verificar" />

    <TextView
        android:id="@+id/lblResultado"
        android:layout_width="396dp"
        android:layout_height="56dp"
        android:text=""
        android:textColor="#00ccff"
        android:textColorLink="#8DE67F"
        android:textSize="16sp"
        />
</LinearLayout>