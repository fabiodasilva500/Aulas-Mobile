<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/lblInfoNumeros"
        android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:text="Selecione a opção desejada"
        android:textSize="16sp" />


    <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rdbPares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonSelected"
            android:text="Exibe números pares" />

        <RadioButton
            android:id="@+id/rdbImpares"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonSelected"
            android:text="Exibe números ímpares" />

        <RadioButton
            android:id="@+id/rdbDivisiveis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="onRadioButtonSelected"
            android:text="Exibe divisíveis por 5" />
    </RadioGroup>

    <TextView
        android:id="@+id/resultado"
        android:layout_width="396dp"
        android:layout_height="615dp"
        android:gravity="center_horizontal"
        android:text=""
        android:textSize="16sp" />

</LinearLayout>

