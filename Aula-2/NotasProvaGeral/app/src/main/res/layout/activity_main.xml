<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/lblNotaProfessor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Digite a nota do professor" />

    <EditText
        android:id="@+id/txtNotaProfessor"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/lblNotaProvaGeral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Digite a nota geral do aluno" />

    <EditText
        android:id="@+id/txtNotaGeral"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </EditText>

    <Button
        android:id="@+id/btnVerificar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Verificar" />

    <TextView
        android:id="@+id/lblResultado"
        android:layout_width="396dp"
        android:layout_height="56dp"
        android:text=""
        android:textColor="#00ccff"
        android:textColorLink="#8DE67F"
        android:textSize="16sp"
        />
</LinearLayout>

