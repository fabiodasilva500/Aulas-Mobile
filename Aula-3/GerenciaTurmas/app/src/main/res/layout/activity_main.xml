<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">

    <TextView
        android:id="@+id/lblInfoId"
        android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:textSize="16sp"
        android:text="Informe o ID da turma" />


    <EditText
        android:id="@+id/txtId"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </EditText>

    <TextView
        android:id="@+id/lblInfoNome"
        android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:textSize="16sp"
        android:text="Informe o Nome da Turma" />


    <EditText
        android:id="@+id/txtNome"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </EditText>

    <TextView
        android:id="@+id/lblInfoQtdAlunos"
        android:layout_width="fill_parent"
        android:layout_height="59dp"
        android:textSize="16sp"
        android:text="Informe a Quantidade de Alunos da Turma" />


    <EditText
        android:id="@+id/txtQtdAlunos"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

    </EditText>

    <Button
        android:id="@+id/btnExibir"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Exibir em console" />

    <TextView
        android:id="@+id/resultado"
        android:layout_width="396dp"
        android:layout_height="615dp"
        android:text=""
        android:textSize="20sp" />

</LinearLayout>